command! -nargs=* -complete=file Tabe call Tabe(<f-args>)

function! Tabe(...)
  if a:0 != 0
    for fn in a:000
      execute printf('tabe %s', fn)
    endfor
    return 0
  else
    tab split
    return 1
  endif
endfunction

